{% extends "_layouts/cp" %}

{% set title  = "Coupons"|t %}
{% set bodyClass = craft.app.request.getSegments()|slice(0, 3)|join(' ') %}

{% set selectedSubnavItem = craft.app.request.getSegment(2) %}
{% set selectedSidebarItem = craft.app.request.getSegment(2) %}

{% set sidebar %}

    <nav class="last">
        <ul>
            <li>
                <a href="{{ cpUrl('enupal-stripe/coupons') }}"
                   {% if selectedSidebarItem == 'coupons' %}class="sel"{% endif %}><i
                            class="fa fa-tag fa-fw" aria-hidden="true"></i>&nbsp;{{ "Coupons"|t('enupal-stripe') }}
                </a>
            </li>
        </ul>
    </nav>

{% endset %}

